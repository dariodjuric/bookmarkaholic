{
  "manifest_version": 3,
  "name": "Bookmarkaholic",
  "version": "1.0.0",
  "description": "Curate your links at lightning speed.",
  "permissions": ["bookmarks"],
  "action": {
    "default_icon": "icon.svg"
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
