{
  "manifest_version": 3,
  "name": "Bookmark Breeze",
  "version": "1.0.0",
  "description": "Curate your links at lightning speed.",
  "permissions": ["bookmarks", "storage"],
  "action": {
    "default_icon": "icon-128.png"
  },
  "icons": {
    "16": "icon-128.png",
    "32": "icon-128.png",
    "48": "icon-128.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
